<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/paisTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/paisTextView"
        android:textSize="@dimen/pais_textSize" />

    <ImageView
        android:id="@+id/bandeiraImageView"
        android:layout_width="@dimen/largura_Bandeira"
        android:layout_height="@dimen/largura_Bandeira"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/bandeiraImageView"
        android:src="@drawable/bandeira" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="@dimen/largura_food"
        android:layout_height="@dimen/largura_food"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/foodImageView"
        android:src="@drawable/food" />

    <TextView
        android:id="@+id/foodTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/foodTextView"
        android:textSize="@dimen/food_textSize" />

</LinearLayout>